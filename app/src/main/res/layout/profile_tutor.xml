<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/i_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:src="@drawable/cover" />

            <ImageView
                android:id="@+id/i_dis_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/or_background"
                android:padding="20dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/t_name"
                style="@style/TextViewCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/i_dis_picture"
                android:text="SANDEEP RANA"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_name"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/i_dis_picture"
                android:text="I am very enthusiastic teacher keen to teach students from my heart."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white" />

            <RatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:rating="3.3"
                android:scaleX="0.5"
                android:scaleY="0.5" />
        </RelativeLayout>

        <Button
            android:id="@+id/but_inbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_below="@+id/top"
            android:layout_margin="10dp"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/ic_inbox"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="INBOX" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_margin="10dp"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/ic_edit"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Edit profile"

            />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/but_inbox"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Subjects:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="monospace" />

            <TextView

                android:id="@+id/t_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Mathematics, Science, Physics, Chemistry &amp; Biology"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Education:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/t_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="B.Tech from Noida International University\n10th from VSAC\n12th from BBC"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Address:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/t_address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="C4/113,SDA,HAUZ KHAS"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="NEW DELHI-110016"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Working at:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/t_workingat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Schoit Pvt. Ltd."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Contact Details:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/t_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="+91-8755677973"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="sandeep.rana011@gmail.com"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/but_askfornumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="ASK FOR NUMBER/EMAIL"
                android:textColor="#0000ff"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
