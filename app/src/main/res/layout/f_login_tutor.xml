<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/logo_schoit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:src="@drawable/logo_shcoit" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_schoit"
            android:layout_margin="5dp"
            android:background="@drawable/edittextstyle"
            android:hint="Username"
            android:inputType="textWebEditText"
            android:padding="10dp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_margin="5dp"
            android:background="@drawable/edittextstyle"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />


        <Button
            android:id="@+id/but_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_margin="5dp"
            android:layout_weight="0.9"
            android:background="@drawable/button_selector"
            android:padding="10dp"
            android:text="LOGIN"
            android:textColor="@color/material_blue_grey_800"
            android:textSize="20dp"
            android:typeface="monospace" />


        <TextView
            android:id="@+id/t_havntaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/but_login"
            android:layout_margin="5dp"
            android:text="Haven't account! "
            android:textColor="@color/blue"
            android:typeface="monospace" />

        <Button
            android:id="@+id/but_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_havntaccount"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:onClick="register_tutor"
            android:text="REGISTER"
            android:textColor="@color/material_blue_grey_800"
            android:textSize="20dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/sign_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/but_register"
            android:layout_margin="5dp"

            android:background="@drawable/social_google_button"
            android:text="Sign in using google"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_google"
            android:layout_margin="5dp"
            android:background="@drawable/social_google_button"
            android:padding="10dp"
            android:text="sign in using facebook"
            android:textColor="#ffffff" />

    </RelativeLayout>
</ScrollView>